        <form class="form-horizontal mrg15T" role="form" id="pageform">
            <div class="form-group row">
                <label for="name" class="col-sm-2 control-label">Name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name should be unique">
                </div>
            </div>
            <div class="form-group row">
                <label for="title" class="col-sm-2 control-label">Title:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="title" name="title" placeholder="For Heading and Display on top">
                </div>
            </div>
            <div class="form-group row">
                <label for="displaytop" class="col-sm-2 control-label">Display Top:</label>
                <div class="col-sm-2">
                    <input type="checkbox" data-on-color="primary" name="displaytop" class="input-switch" checked data-size="medium" data-on-text="On" data-off-text="Off">
                </div>
                <label for="displaybottom" class="col-sm-2 control-label">Display Bottom:</label>
                <div class="col-sm-2">
                    <input type="checkbox" data-on-color="primary" name="displaybottom " class="input-switch" checked data-size="medium" data-on-text="On" data-off-text="Off">
                </div>
            </div>
            <div class="form-group row">
                <label for="displayleft" class="col-sm-2 control-label">Display Left:</label>
                <div class="col-sm-2">
                    <input type="checkbox" data-on-color="primary" name="displayleft" class="input-switch" checked data-size="medium" data-on-text="On" data-off-text="Off">
                </div>
                <label for="displayright" class="col-sm-2 control-label">Display Right:</label>
                <div class="col-sm-2">
                    <input type="checkbox" data-on-color="primary" name="displayright" class="input-switch" checked data-size="medium" data-on-text="On" data-off-text="Off">
                </div>
            </div>
            <div class="form-group row">
                <label for="metatitle" class="col-sm-2 control-label">Meta Title:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="metatitle" placeholder="">
                </div>
            </div>
            <div class="form-group row">
                <label for="metadescription" class="col-sm-2 control-label">Meta Description:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="metadescription"></textarea>
                </div>
            </div>
        <div class="pad15A">
        <link href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
        <textarea id="pagecontent" name="content"></textarea>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js"></script>
        <script>
        new FroalaEditor('#pagecontent');
        </script> 
            </div>
